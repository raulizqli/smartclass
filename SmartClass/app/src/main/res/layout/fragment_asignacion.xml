<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="raulizq.smartclass.AsignacionFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/asignacion"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sp_asignacion"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="@dimen/abc_action_button_min_height_material" />
            <LinearLayout
                android:id="@+id/actividades"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_actividades"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="@dimen/abc_action_button_min_height_material" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tareas"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_tareas"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="@dimen/abc_action_button_min_height_material" />
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Asignar"
                android:id="@+id/guardarAsignacion"/>
            <Space
                android:layout_width="130px"
                android:layout_height="130px" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
